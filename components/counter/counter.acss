:root {
  --raleway: "Raleway", sans-serif;
  --oleo: "Oleo Script";
  --gold: #bf9b30;
  --white: #e6e8ec;
   --black: black;
}

.order-items {
  display: flex;
  flex-direction: column;
  color: var(--white);
  justify-content: space-around;
  padding: 4rpx;
}

.count {
  font-size: 35rpx;
  font-family: var(--oleo);
}
.minus,
.plus {
  font-size: 40rpx;
  margin: 40rpx;
  border: 5rpx solid var(--gold);
  border-radius: 50%;
  padding: 4rpx 20rpx;
  font-family: var(--raleway);
}

.order-item {
  margin: 8rpx;
  font-family: var(--raleway);
}

button {
  background: var(--white);
  color: var(--black);
  width: 80%;
  border-radius: 60rpx;
  font-family: var(--oleo);
  border: none;
}
